<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matsemann.robot.controller.ui.mainview.LegoViewController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <SplitPane fx:id="mainSplitPane" dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
                    <items>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                              <ScrollPane fx:id="scrollPane" fitToWidth="true" BorderPane.alignment="CENTER">
                                  <GridPane fx:id="mainGrid">
                                      <columnConstraints>
                                          <ColumnConstraints hgrow="ALWAYS" maxWidth="600" minWidth="520" prefWidth="520" />
                                          <ColumnConstraints hgrow="ALWAYS" maxWidth="600" minWidth="520" prefWidth="520" />
                                      </columnConstraints>
                                      <rowConstraints>
                                          <RowConstraints />
                                      </rowConstraints>
                              <padding>
                                 <Insets left="80.0" top="20" />
                              </padding>
                                  </GridPane>
                              </ScrollPane>
                     </center>
                     <right>
                        <VBox fx:id="robotStatusPane" prefHeight="80.0" spacing="20.0" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </BorderPane.margin>
                       </VBox>
                     </right>
                  </BorderPane>
                        <SplitPane fx:id="consolePane" dividerPositions="0.5">
                            <items>
                                <Pane fx:id="leftConsole">
                                    <children>
                                        <Label text="Balla" />
                                    </children>
                                </Pane>
                                <Pane fx:id="rightConsole">
                                    <children>
                                        <Label text="Halla" />
                                    </children>
                                </Pane>
                            </items>
                        </SplitPane>
                    </items>
                </SplitPane>
            </center>
            <bottom>
                <HBox BorderPane.alignment="CENTER">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#reset" text="Reset kommandoer" />
                        <ToggleButton fx:id="consoleToggle" mnemonicParsing="false" onAction="#handleToggleButton" text="Vis konsoll" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
